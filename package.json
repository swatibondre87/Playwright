{
  "name": "playwright-ts",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:tracewithretry": "playwright test --retries=1 --trace=retain-on-failure",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:grep": "playwright test -g '@smoke'",
    "test:ci": "playwright test --reporter=list",
    "test:retry": "playwright test --retries=2",
    "report:html": "playwright show-report",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "clean:reports": "rm -rf playwright-report allure-results allure-report",
    "coverage": "npx nyc --reporter=lcov playwright test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.15",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
